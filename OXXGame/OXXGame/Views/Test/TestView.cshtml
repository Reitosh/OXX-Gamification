@model Submission
@{
    ViewData["Title"] = "Evnetest";
}


    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>OXXGame - @ViewData["Title"]</title>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

        <!-- Linked CSS Files -->
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/mobile.css" />

        <!-- Linked Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

        <!-- Codemirror-->
        <script src="~/codemirror/lib/codemirror.js"></script>
        <script src="~/codemirror/mode/javascript/javascript.js"></script>
        <script src="~/codemirror/mode/xml/xml.js"></script>
        <script src="~/codemirror/addon/edit/closebrackets.js"></script>
        <script src="~/codemirror/mode/clike/clike.js"></script>
        <link rel="stylesheet" href="~/codemirror/lib/codemirror.css">
        <link href="~/codemirror/theme/dracula.css" rel="stylesheet" />
    
    </head>
    <body>
        <div class="main">
            <div class="form-group">
                @using (Html.BeginForm("KjorKode", "Test", FormMethod.Post))
                {
                    <label class="test-text">Kategori: </label><br />
                    <label class="test-text">Vanskelighetsgrad:</label><br />
                    <label class="test-text">Oppgave:</label><br />

                    <textarea class="editor" asp-for="Code" id="input" placeholder="Kode her" name="code" rows="10"></textarea>
                    <input type="submit" value="Kjør kode" />
                    <textarea class="f" placeholder="Output her" name="code" rows="5"></textarea>
                    
                    <script>
                        var editor = CodeMirror.fromTextArea(
                            document.getElementById('input'), { 
                                mode: "text/x-csrc", 
                                theme: "dracula",
                                lineNumbers: true,
                                indentUnit: 4,
                                indentWithTabs: true,
                                autoCloseTags: true,
                                autoCloseBrackets: true,
                        });
                    </script>

                }




                @using (Html.BeginForm("Avbryt", "Test", FormMethod.Get))
                {
                    <button id="btn-login" new { onclick="return confirm('Er du sikker på at du vil kaste inn håndklet? Du vil bli logget ut og tatt tilbake til innlogging.');" })>
                        Gi opp
                    </button>
                }
            </div>
        </div>
</body>