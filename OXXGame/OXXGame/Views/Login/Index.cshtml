@model User

@{
    ViewData["Title"] = "Brukerinnlogging";
    Layout = null;
}

<!DOCTYPE html>
<html lang="nb">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>OXXGame - @ViewData["Title"]</title>

    <!-- Linked Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/brand/favicon.png">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/cb7428d12a.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Linked CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/mobile.css" />
</head>
<body>
    <!-- LOGIN -->
    <div class="page-background">
        <div class="container">
            <div class="login-box">
                <img src="../images/brand/logo_hvit.png" alt="logo" />

                <!-- Login form -->
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <input asp-for="email" type="text" name="email" placeholder="E-post" /><br />
                        <div class="form-error form-error-login" id="form-login-uname-error"></div>
                    </div>
                    <div class="form-group">
                        <input id="passwdLogin" asp-for="password" type="password" name="password" placeholder="Passord" />
                        <span class="fas fa-eye passwd-toggle" toggle="#passwdLogin"></span>
                        <br />
                        <div class="form-error form-error-login" id="form-login-passwd-error"></div>
                    </div>

                    <a class="login-box-content" id="login-content-1" href="#">
                        <p>Glemt innloggingsdetaljer?</p>
                    </a>

                    <div class="form-group">
                        <input id="btn-login" type="submit" name="login" value="Logg inn" />
                    </div>

                    <a class="login-box-content" id="login-content-2" asp-controller="Home" asp-action="UserRegistration">
                        <p>Registrer ny bruker</p>
                    </a>
                }
            </div>
        </div>
    </div>
    <!-- END LOGIN -->

    <!-- Bootstrap Script Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Linked Script Files -->
    <script src="~/js/toggle_passwd.js"></script>
</body>
</html>
