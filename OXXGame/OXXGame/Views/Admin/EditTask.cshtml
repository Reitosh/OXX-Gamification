@model OXXGame.Models.Task
@{
    ViewData["Title"] = "EditTask";
    List<Category> categories = (List<Category>) ViewData["Categories"];
}

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>OXXGame - @ViewData["Title"]</title>

        <!-- Linked Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,700&display=swap" rel="stylesheet">

        <!-- Favicon -->
        <link rel="icon" type="image/png" href="~/images/brand/favicon.png">

        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/cb7428d12a.js"></script>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

        <!-- Linked CSS Files -->
        <link rel="stylesheet" type="text/css" href="~/css/site.css" />
        <link rel="stylesheet" type="text/css" href="~/css/mobile.css" />
        <link rel="stylesheet" type="text/css" href="~/codemirror/lib/codemirror.css" />
        <link href="~/codemirror/theme/base16-dark.css" rel="stylesheet" />
        <link href="~/codemirror/addon/scroll/simplescrollbars.css" rel="stylesheet" />
    </head>
<body>

    <!-- TASK REGISTRATION -->
    <div class="section section-user-reg">
        <div class="container container-task-reg">
            <h2>Endre oppgave</h2>
            <span class="underline"></span>
            <h5>Endre oppgaven ved å endre feltene under</h5>

            <!-- Registration Form -->
            <div class="wrapper wrapper-form" id="wrapper-form-reg">

                @using (Html.BeginForm("EditTask", "Admin", FormMethod.Post,
               new { name = "formReg", id = "form-reg", onsubmit = "return regAll()", novalidate = "true" }))

                {
                    @Html.HiddenFor(model => model.testId)
                    <div class="row">
                        <div class="col-md-6">
                            <label for="form-reg-test">Kategori</label>
                            <div class="form-group">
                                <select asp-for="category">
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.category">@category.category</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="form-reg-test">Vanskelighetsgrad</label>
                            <div class="form-group">
                                <select asp-for="difficulty">
                                    <option>0</option>
                                    <option>1</option>
                                    <option>2</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input asp-for="test" type="text" name="test" class="form-control"
                                      id="form-reg-test" onchange="regTest()" required>
                                    <label class="float-label" for="form-reg-test">Oppgavetekst</label>
                                    <div class="form-error form-error-reg" id="form-error-reg-test"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="font-size: 12px">OBS! Viktig å merke seg at templates til HTML/CSS og JavaScript må være på formatet HTML&&&&CSS&&&&JavaScript</p>
                            <textarea asp-for="template" name="template" id="templatess" onchange="regTest()" required></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" name="register" value="Lagre" class="btn btn-success btn-form-reg">
                        </div>
                    </div>
                }
                <!-- End Registration Form -->
            </div>
        </div>
    </div>
    <!-- END TASK REGISTRATION -->
    <!-- Bootstrap Script Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Linked Script Files -->
    <script src="~/js/nav_scroll.js"></script>
    <script src="~/js/toggle_passwd.js"></script>
    <script src="~/js/client_validation.js"></script>
    <script src="~/codemirror/lib/codemirror.js"></script>
    <script src="~/codemirror/mode/xml/xml.js"></script>
    <script src="~/codemirror/addon/edit/closebrackets.js"></script>
    <script src="~/codemirror/addon/scroll/simplescrollbars.js"></script>
    <script src="~/codemirror/addon/edit/matchtags.js"></script>
    <script src="~/codemirror/addon/edit/closetag.js"></script>
    <script src="~/codemirror/addon/display/placeholder.js"></script>
    <script src="~/js/AdminTemplate.js"></script>
</body>